generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  name     String?
  provider OAuthProvider
  password String?
  friends  User[]        @relation("Friendship")
  friendOf User[]        @relation("Friendship")
}

enum OAuthProvider {
  EMAIL
  GOOGLE
}
